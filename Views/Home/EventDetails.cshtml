@model Eventt
@{
    ViewData["Title"] = "EventDetails";
}
@{
    Layout = "_Layout";
}

<div class="event-detail">
    <h1>#@Model.Category</h1>
    <div id="eventImagesCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-inner">
                @if (Model.SecondaryImageUrls != null && Model.SecondaryImageUrls.Count > 0)
                {
                    for (int i = 0; i < Model.SecondaryImageUrls.Count; i++)
                    {
                        var imageUrl = Model.SecondaryImageUrls[i];
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="/@imageUrl.ToString()" class="d-block w-100" alt="Event Image @i"/>
                        </div>
                    }
                }
                <!-- Add more carousel items for additional images -->
            </div>
            <a class="carousel-control-prev" href="#eventImagesCarousel" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </a>
            <a class="carousel-control-next" href="#eventImagesCarousel" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </a>
        </div>
        <p>@Model.Description</p>
    </div>